<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.EndlessGame.GUI"
    android:versionCode="1"
    android:versionName="1.0"
    android:anyDensity="false">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        
        <activity
            android:name="com.EndlessGame.GUI.MainActivity"
            android:screenOrientation="landscape" 
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.EndlessGame.GUI.GameOverScreen"
            android:screenOrientation="landscape" 
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.EndlessGame.GUI.GAMEOVERSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.EndlessGame.GUI.MainScreen"
            android:screenOrientation="landscape" 
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.EndlessGame.GUI.MAINSCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
